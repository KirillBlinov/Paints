<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Высота (длина) поверхности"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:text="   м"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber"
        app:layout_constraintTop_toTopOf="@+id/editTextNumber" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Количество слоев"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber3"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:text="   м"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber2"
        app:layout_constraintTop_toTopOf="@+id/editTextNumber2" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:text="    л"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber5"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/teal_200"
        android:backgroundTint="@color/teal_700"
        android:backgroundTintMode="add"
        android:hapticFeedbackEnabled="false"
        android:onClick="Button"
        android:text="Рассчитать"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="324dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="Ширина поверхности"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="324dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Параметры комнаты"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/editTextNumber"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="324dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="Расход краски кв.м/л"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/editTextNumber2"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Объем банки"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber4"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber4" />

    <EditText
        android:id="@+id/editTextNumber3"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTextNumber4"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="324dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Параметры краски"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber2"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:text=" м²/л"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber3"
        app:layout_constraintTop_toTopOf="@+id/editTextNumber3" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:text="  шт"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="324dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Запас"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber5"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber5" />

    <EditText
        android:id="@+id/editTextNumber5"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="MissingConstraints">


        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="324dp"
            android:layout_height="30dp"
            android:text="10% запас"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="324dp"
            android:layout_height="30dp"
            android:text="15% запас"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/radioButton"
            app:layout_constraintTop_toBottomOf="@+id/radioButton" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="324dp"
            android:layout_height="30dp"
            android:text="Без запаса"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/radioButton3"
            app:layout_constraintTop_toBottomOf="@+id/radioButton3" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>